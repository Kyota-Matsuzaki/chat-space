%body
  .contents
    .menu
      .chat-user
        %h4
          =current_user.name
        .chat-user__icon
          =link_to new_group_path do
            =fa_icon "pencil-square-o"
          =link_to edit_user_registration_path do
            =fa_icon "cog"
      - @groups.each do |group|
        %ul.chat-groups
          %li.chat-group
            = link_to "/messages/#{group.id}", method: :get do
              %p.chat-group__name
                =group.name
              %p.chat-group__message aaa
          / =link_to 'Edit', edit_group_path, class: "edit-b